void solve () {
    int n=0,m=0,a=0,b=0,c=0,x=0,y=0,z=0,w=0,k=0;
    string s;
    cin>>s;
    s+=s;
    rep(i,0,s.size()-1) {
        if(s[i]!=s[i+1]) {
            x++;
            y=max(x,y);
        }
        else x=0;
    }
    y++;
    if(y>s.size()/2) cout<<s.size()/2<<en;
    else cout<<y<<en;
}

